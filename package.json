{
  "version": "0.1.0",
  "name": "@idangoldman/stooge",
  "title": "Stooge",
  "description": "A simple config formatter that converts between JSON, YAML, TOML, and INI.",
  "author": "Idan Goldman",
  "license": "MIT",
  "homepage": "https://github.com/idangoldman/stooge/",
  "repository": {
    "type": "git",
    "url": "https://github.com/idangoldman/stooge.git"
  },
  "bugs": {
    "url": "https://github.com/idangoldman/stooge/issues"
  },
  "keywords": [
    "config file",
    "config",
    "configuration file",
    "configuration",
    "converter",
    "formatter",
    "ini",
    "json",
    "parser",
    "toml",
    "yaml",
    "yml"
  ],
  "engines": {
    "node": "22.1.0",
    "pnpm": "9.7.1"
  },
  "type": "module",
  "main": "./library/api.js",
  "bin": {
    "stooge": "./bin/index.js"
  },
  "imports": {
    "#root/*": "./*"
  },
  "scripts": {
    "clear": "rm -frv node_modules pnpm-lock.yaml tmp/**/*",
    "help": "pnpm run prefix --help",
    "prefix": "node --trace-warnings bin/index.js",
    "publish": "pnpm publish --access public",
    "reinstall": "pnpm run clear && pnpm install",
    "start": "pnpm exec stooge",
    "test": "./node_modules/.bin/cucumber-js --config ./tests/cucumber.yml",
    "upgrade": "pnpm update --lockfile-only"
  },
  "dependencies": {
    "ini": "4.1.3",
    "pino": "9.3.2",
    "pino-pretty": "11.2.2",
    "yaml": "2.5.0",
    "yargs": "17.7.2",
    "zx": "8.1.4"
  },
  "devDependencies": {
    "@cucumber/cucumber": "10.9.0",
    "@cucumber/pretty-formatter": "1.0.1",
    "rimraf": "6.0.1"
  }
}
