{
  "version": "0.0.1",
  "name": "stooge",
  "description": "A simple config formatter that converts between JSON, JSONNET, YAML, TOML and INI.",
  "author": "Idan Goldman",
  "license": "MIT",
  "keywords": [
    "config",
    "formatter",
    "json",
    "jsonnet",
    "yaml",
    "yml",
    "ini",
    "toml"
  ],
  "engines": {
    "node": "22.1.0",
    "pnpm": "9.1.1"
  },
  "type": "module",
  "main": "./bin/index.js",
  "bin": {
    "stooge": "./bin/index.js"
  },
  "imports": {
    "#root/*": "./*"
  },
  "scripts": {
    "clear": "rm -frv node_modules pnpm-lock.yaml",
    "help": "pnpm run prefix bin/index.js --help",
    "prefix": "node --no-warnings --experimental-json-modules",
    "reinstall": "pnpm run clear && pnpm install",
    "start": "pnpm run prefix bin/index.js",
    "test": "node --test './tests/cli.test.js'",
    "test:bdd": "cucumber-js --config ./tests/cucumber.yml",
    "upgrade": "pnpm update --lockfile-only"
  },
  "dependencies": {
    "ini": "^4.1.2",
    "pino": "^9.1.0",
    "pino-pretty": "^11.0.0",
    "toml": "^3.0.0",
    "yaml": "^2.4.2",
    "yargs": "^17.7.2",
    "zx": "^8.1.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.7.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "rimraf": "^5.0.7"
  }
}
